# LottoGoGo v2 public-safe environment template
# Copy to .env for local use. Do not commit .env.

# Donation link shown on the web page
DONATE_URL=https://buymeacoffee.com/lottogogo

# Optional: frontend API base URL (leave empty for same-origin)
BACKEND_URL=

# Optional: public URL used for canonical/robots/sitemap generation
PUBLIC_BASE_URL=

# Optional: override SEO title/description
SEO_TITLE=
SEO_DESCRIPTION=

# Optional: social preview image URLs
OG_IMAGE_URL=
TWITTER_IMAGE_URL=

# Optional: search console verification meta values
GOOGLE_SITE_VERIFICATION=
NAVER_SITE_VERIFICATION=

# Optional: alternate CSV path
LOTTO_HISTORY_CSV=history.csv

# Optional: comma-separated origins (default "*")
CORS_ALLOW_ORIGINS=*

# Optional: protect warmup/status endpoints
WARMUP_TOKEN=

# Optional: per-bucket pre-generated recommendation pool tuning
RECOMMEND_POOL_TARGET=4
RECOMMEND_POOL_MAX=8
RECOMMEND_BOOTSTRAP_SAMPLE_SIZE=6000
